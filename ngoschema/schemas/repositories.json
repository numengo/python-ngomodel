{
    "$schema": "https://numengo.org/ngoschema/draft-06",
    "$id": "https://numengo.org/ngoschema/repositories",
    "type": "object",
    "$defs": {
        "Repository": {
            "type": "object",
            "abstract": true,
            "additionalProperties": false,
            "properties": {
                "objectClass": {
                    "type": "importable"
                },
                "primaryKeys": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "many": {
                    "type": "boolean",
                    "default": false
                },
                "no_defaults": {
                    "type": "boolean",
                    "default": true
                },
                "use_entity_ref": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "FilterRepositoryMixin": {
            "type": "object",
            "abstract": true,
            "additionalProperties": false,
            "properties": {
                "only": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "but": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "recursive": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "MemoryRepository": {
            "type": "object",
            "additionalProperties": false,
            "extends": [
                "#/$defs/Repository",
                "#/$defs/FilterRepositoryMixin"
            ]
        },
        "FileRepository": {
            "type": "object",
            "abstract": true,
            "additionalProperties": false,
            "extends": [
                "#/$defs/Repository",
                "#/$defs/FilterRepositoryMixin"
            ],
            "properties": {
                "document": {
                    "$ref": "https://numengo.org/ngoschema/document#/$defs/Document"
                },
                "overwrite": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "JsonFileRepository": {
            "type": "object",
            "extends": [
                "#/$defs/FileRepository"
            ],
            "additionalProperties": true
        },
        "YamlFileRepository": {
            "type": "object",
            "extends": [
                "#/$defs/FileRepository"
            ],
            "additionalProperties": true
        },
        "XmlFileRepository": {
            "type": "object",
            "extends": [
                "#/$defs/FileRepository"
            ],
            "additionalProperties": true,
            "properties": {
                "pretty": {
                    "type": "boolean",
                    "default": true
                },
                "tag": {
                  "type": "string"
                },
                "attr_prefix": {
                  "type": "string",
                  "default": "@"
                },
                "cdata_key": {
                  "type": "string",
                  "default": "#text"
                },
                "short_empty_elements": {
                    "type": "boolean",
                    "default": true
                },
                "indent": {
                    "type": "string",
                    "default": "\t"
                },
                "newl": {
                    "type": "string",
                    "default": "\n"
                }
            }
        }
    }
}
