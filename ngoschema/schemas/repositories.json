{
    "$schema": "http://numengo.org/ngoschema/draft-05",
    "$id": "http://numengo.org/ngoschema/repositories",
    "type": "object",
    "definitions": {
        "Repository": {
            "type": "object",
            "isAbstract": true,
            "additionalProperties": false,
            "properties": {
                "objectClass": {
                    "type": "importable"
                },
                "fkeys": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "many": {
                    "type": "boolean",
                    "default": false
                },
                "no_defaults": {
                    "type": "boolean",
                    "default": true
                },
                "remove_refs": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "FilterRepositoryMixin": {
            "type": "object",
            "isAbstract": true,
            "additionalProperties": false,
            "properties": {
                "only": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "but": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "recursive": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "MemoryRepository": {
            "type": "object",
            "additionalProperties": false,
            "extends": [
                "#/definitions/Repository",
                "#/definitions/FilterRepositoryMixin"
            ]
        },
        "FileRepository": {
            "type": "object",
            "isAbstract": true,
            "additionalProperties": false,
            "extends": [
                "#/definitions/Repository",
                "#/definitions/FilterRepositoryMixin"
            ],
            "properties": {
                "document": {
                    "$ref": "http://numengo.org/ngoschema/document#/definitions/Document"
                },
                "overwrite": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "JsonFileRepository": {
            "type": "object",
            "extends": [
                "#/definitions/FileRepository"
            ],
            "additionalProperties": true
        },
        "YamlFileRepository": {
            "type": "object",
            "extends": [
                "#/definitions/FileRepository"
            ],
            "additionalProperties": true
        },
        "XmlFileRepository": {
            "type": "object",
            "extends": [
                "#/definitions/FileRepository"
            ],
            "additionalProperties": true,
            "properties": {
                "pretty": {
                    "type": "boolean",
                    "default": true
                },
                "tag": {
                  "type": "string"
                },
                "attr_prefix": {
                  "type": "string",
                  "default": "@"
                },
                "cdata_key": {
                  "type": "string",
                  "default": "#text"
                },
                "short_empty_elements": {
                    "type": "boolean",
                    "default": true
                },
                "indent": {
                    "type": "string",
                    "default": "\t"
                },
                "newl": {
                    "type": "string",
                    "default": "\n"
                }
            }
        },
        "Jinja2FileRepository": {
            "type": "object",
            "extends": [
                "#/definitions/FileRepository"
            ],
            "additionalProperties": false,
            "properties": {
                "template": {
                    "type": "path"
                },
                "___c_ontext": {
                  "additionalProperties": {
                    "type": "string"
                  },
                  "type": "object"
                },
                "___p_rotectedRegions": {
                  "additionalProperties": {
                    "type": "string"
                  },
                  "type": "object"
                }
            }
        },
        "Jinja2MacroFileRepository": {
            "type": "object",
            "extends": [
                "#/definitions/Jinja2FileRepository"
            ],
            "additionalProperties": false,
            "properties": {
                "macroName": {
                    "type": "string"
                },
                "macroArgs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "Jinja2MacroTemplatedPathFileRepository": {
            "type": "object",
            "extends": [
                "#/definitions/Jinja2MacroFileRepository"
            ],
            "additionalProperties": false,
            "properties": {
                "outputDir": {
                    "type": "path"
                },
                "templatedPath": {
                    "type": "string"
                }
            }
        }
    }
}
