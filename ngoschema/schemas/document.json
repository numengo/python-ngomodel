{
  "$schema": "http://numengo.org/ngoschema/draft-05",
  "$id": "http://numengo.org/ngoschema/document",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Document": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "filepath": {
          "type": "path"
        },
        "binary": {
          "type": "boolean",
          "default": false
        },
        "uri": {
          "type": "string",
          "format": "uri-reference"
        },
        "id": {
          "type": "string",
          "format": "uri-reference"
        },
        "mimetype": {
          "type": "string",
          "default": "text/plain"
        },
        "charset": {
          "type": "string",
          "default": "utf-8"
        },
        "version": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dateCreated": {
          "type": "datetime"
        },
        "dateModified": {
          "type": "datetime"
        },
        "contentSize": {
          "type": "integer"
        }
      }
    }
  }
}
