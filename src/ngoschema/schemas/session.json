{
    "$schema": "http://numengo.org/draft-05/schema",
    "$id": "http://numengo.org/draft-05/ngoschema/session",
    "definitions": {
        "Session": {
            "type": "object",
            "abstract": true,
            "additionalProperties": false,
            "properties": {
                "autoflush": {
                    "type": "boolean",
                    "default": true
                },
                "expireOnCommit": {
                    "type": "boolean",
                    "default": true
                },
                "autocommit": {
                    "type": "boolean",
                    "default": true
                },
                "bind": {
                    "type": "object",
                    "additionalProperties": "string"
                }
            }
        }
    }
}
