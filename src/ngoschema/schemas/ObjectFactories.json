{
  "$schema": "http://numengo.org/draft-05/schema",
  "$id": "http://numengo.org/draft-05/schema/object-factories",
  "definitions": {
    "ObjectFactory": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "objectClass": {
          "type": "string"
        },
        "lazy_loading": {
          "type": "boolean",
          "default": true
        },
        "deserializers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "ObjectLoader": {
      "type": "object",
      "extends": ["#/definitions/ObjectFactory"],
      "additionalProperties": false,
      "properties": {
        "primaryKey": {
          "type": "string",
          "default": "name"
        }
      }
    }
  }
}