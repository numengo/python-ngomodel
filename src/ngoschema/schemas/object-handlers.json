{
    "$schema": "http://numengo.org/draft-05/schema",
    "$id": "http://numengo.org/draft-05/ngoschema/object-handlers",
    "definitions": {
        "ObjectHandler": {
            "type": "object",
            "abstract": true,
            "additionalProperties": false,
            "properties": {
                "objectClass": {
                    "type": "importable"
                },
                "fkeys": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "many": {
                    "type": "boolean",
                    "default": false
                },
                "no_defaults": {
                    "type": "boolean",
                    "default": true
                },
                "remove_refs": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "FilterObjectHandlerMixin": {
            "type": "object",
            "abstract": true,
            "additionalProperties": false,
            "properties": {
                "only": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "but": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "recursive": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "FileObjectHandler": {
            "type": "object",
            "abstract": true,
            "additionalProperties": false,
            "extends": [
                "#definitions/ObjectHandler",
                "#definitions/FilterObjectHandlerMixin"
            ],
            "properties": {
                "document": {
                    "$ref": "http://numengo.org/draft-05/ngoschema/document#/definitions/Document"
                },
                "overwrite": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "JsonFileObjectHandler": {
            "type": "object",
            "extends": [
                "#definitions/FileObjectHandler"
            ],
            "additionalProperties": true
        },
        "YamlFileObjectHandler": {
            "type": "object",
            "extends": [
                "#definitions/FileObjectHandler"
            ],
            "additionalProperties": true
        },
        "XmlFileObjectHandler": {
            "type": "object",
            "extends": [
                "#definitions/FileObjectHandler"
            ],
            "additionalProperties": false,
            "properties": {
                "pretty": {
                    "type": "boolean",
                    "default": true
                },
                "tag": {
                  "type": "string"
                },
                "attr_prefix": {
                  "type": "string",
                  "default": "@"
                },
                "cdata_key": {
                  "type": "string",
                  "default": "#text"
                },
                "short_empty_elements": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "Jinja2FileObjectHandler": {
            "type": "object",
            "extends": [
                "#definitions/FileObjectHandler"
            ],
            "additionalProperties": false,
            "properties": {
                "template": {
                    "type": "path"
                },
                "___c_ontext": {
                  "additionalProperties": {
                    "type": "string"
                  },
                  "type": "object"
                },
                "___p_rotectedRegions": {
                  "additionalProperties": {
                    "type": "string"
                  },
                  "type": "object"
                }
            }
        },
        "Jinja2MacroFileObjectHandler": {
            "type": "object",
            "extends": [
                "#definitions/Jinja2FileObjectHandler"
            ],
            "additionalProperties": false,
            "properties": {
                "macroName": {
                    "type": "string"
                },
                "macroArgs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "Jinja2MacroTemplatedPathFileObjectHandler": {
            "type": "object",
            "extends": [
                "#definitions/Jinja2MacroFileObjectHandler"
            ],
            "additionalProperties": false,
            "properties": {
                "outputDir": {
                    "type": "path"
                },
                "templatedPath": {
                    "type": "string"
                }
            }
        }
    }
}
